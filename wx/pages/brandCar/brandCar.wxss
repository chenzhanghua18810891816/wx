page{
    font-family: "Microsoft YaHei";
    color:#444;
    background:#f3f3f3;
}
/*图片*/
.img{
    /*background: url("chu.png") no-repeat;*/
    background-size: cover;
    width:80rpx;
    height:80rpx;
    /*border-radius:50%;*/
    background:#fff;
}
.img-hot{
    display: block;
    margin:0 auto;
}
.img-list{
    display:inline-block;
}
.img-drawer{
     width:130rpx;
     height:98rpx;
     border-radius:0;
