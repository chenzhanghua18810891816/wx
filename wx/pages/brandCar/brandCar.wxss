/* 搜索框--S */
.city{
    /*float: left;*/
}
.search-view{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding:20rpx;
    background:#3572ce;
    color:#fff;
    /*float: left;*/
}
.search-view:after{
    content:'';
    height:0;
    clear:both;
    overflow: hidden;
    display: block;
}
.search-form{
    /*float: right;*/
    width:80%;
    height:80rpx;
    /*background:#fff;*/
    /*display: flex;
    justify-content: center;
    align-items: center;*/
}
.search-input{
    position:relative;
    display: inline-block;
    width:100%;
    height:100%;
    background:#fff;
    font-size:24rpx;
    border-radius:8rpx;
    text-align: center;
}
.search-icon{
    position:absolute;
    left:60%;
    top:44rpx;
    z-index:1000;

}

/* 搜索框--E */


/* 标签切换--S */
.swiper-head{
  display:flex;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
  height:70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #444;
  background:#fff;
  border-bottom:solid 1rpx #e8e8e8;
  border-top:solid 1rpx #e8e8e8;
}
.swiper-head-item:first-child{
    width:50%;
    border-right:solid 1rpx #e8e8e8;
}
.swiper-head-item:last-child{
    width:50%;
}

.on{
  color: #3572ce;
}
.swiper-content{
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
 }

/* 标签切换--E */

/*热门品牌*/
.hot-view{
    background: #fff;
    /*margin-top:20rpx;*/
    border-bottom:solid 1rpx #dedede;
}
.hot-view  > text{
    display: block;
    font-size:32rpx;
    height:80rpx;
    line-height: 80rpx;
    border-bottom:solid 1rpx #dedede;
    padding-left:18rpx;
}
.hot-item{
    /*默认不换行*/
    /*padding:20rpx;*/
    padding: 0 63rpx 29rpx 63rpx;
    text-align: center;
    font-size:24rpx;
    color:#444;
}
.hot-row{
    display:flex;
    justify-content: space-between;
    align-items: center;
}
.hot-row > view{
    padding-top:53rpx;
}
.hot-name{
    padding-top:20rpx;
}

/*品牌列表*/
.brand-scroll{
    /*height:667px; */
    /*??*/
}
.brand-item view{
    display:block;
}
.brand-item > text{ 
    display: block;
    color:#777;
    background:#eee;
    font-size:30rpx;
    height: 61rpx;
    line-height:61rpx;
    padding-left:32rpx;
}
.brand-item > view{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height:100rpx;
    font-size:30rpx;
    line-height:100rpx;
    padding-left:32rpx;
    background: #fff;
}
.brand-item view:not(:last-child){
    border-bottom:solid 1rpx #eee;
}
.brand-name{
    padding-left:30rpx;
}
.letter-item{
    position:fixed;
    width:20px;
    top:50%;
    right:0;
    /*border:solid 1px #ccc;
    border-radius:7px;*/
    transform: translate(0,-50%);
}
.letter-hover{
    position:fixed;
    width:20px;
    top:50%;
    right:0;
    transform: translate(0,-50%);
    border-radius:7px;
    background:rgba(0,0,0,.2);
}
.letter-li{
    display:flex;
    align-items: center;
    justify-content: center;
    color:#3572ce;
    background:transparent;
    font-size:26rpx;
    height:40rpx;
}
.letter-li:target{
    color:red;
}
