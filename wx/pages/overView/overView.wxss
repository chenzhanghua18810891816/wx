    color:transparent;
}
.img{
    vertical-align: bottom;
}
.img-info{
    width:120rpx;
    height:90rpx;
}
.img-detail{
    width:100%;
    height:455rpx;
}
.red-price{
    color:#e74b3c;
}
.gray-price{
    color:#999;
}
/*公共区域-E*/

.detail-title{
    display:flex;
    /*justify-content: space-around;
    align-items: center;*/
    border-bottom:solid 1rpx #e8e8e8;
    border-top:solid 1rpx #e8e8e8;
}
.scroll-detail{
    margin-top:20rpx;
}
