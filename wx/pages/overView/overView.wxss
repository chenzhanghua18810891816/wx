    border-right:solid 1rpx #e8e8e8;
}
/*车系信息-S*/
.detail-info{
    display:flex;
    justify-content: flex-start;
    align-items: center;
    padding:30rpx;
    background: #fff;
    font-size:30rpx;
}
.detail-info-txt{
    padding-left:20rpx;
}
.detail-info-txt > text{
    display: block;
    font-weight: bold;
    padding-bottom: 20rpx;
}
/*车系信息-E*/

/*车系大图-S*/
.detail-img > view{
    border-right:0;
}
.wrap-tag{
    position:absolute;
    top:20rpx;
}
.tag-red{
    position: relative;
    width: 143rpx;
    height: 60rpx;
    background: #e74b3c;
    font-size: 28rpx;
    line-height:60rpx;
    color:#fff;
    text-align: center;
    box-shadow: 0 5px 4px -4px black;

}
.tag-red:before {
    content:"";
    position: absolute;
    left: 100%;
    width: 0;
    height: 0;
    border-top: 30rpx solid #e74b3c;
    border-right: 17rpx solid transparent;
    border-bottom: 30rpx solid #e74b3c;
}
.tag-gray{
    position: relative;
    width: 143rpx;
    height: 60rpx;
    background: #f3f3f3;
    font-size: 28rpx;
    line-height:60rpx;
    color:#b1b1b1;
    text-align: center;
    box-shadow: 0 5px 4px -4px black;

}
.tag-gray:before {
    content:"";
    position: absolute;
    left: 100%;
    width: 0;
    height: 0;
    border-top: 30rpx solid #f3f3f3;
    border-right: 17rpx solid transparent;
    border-bottom: 30rpx solid #f3f3f3;
}
.detail-image{
    position: relative;
}
.detail-image-info{
    position:absolute;
    width:100%;
    left:0;
    bottom:15rpx;
    font-size:28rpx;
    color:#fff;
    background:transparent;
}
.detail-image-info:after{
    display: block;
    content:'';
    height:0;
    clear:both;
    overflow: hidden;
}
.float-level{
    float:left;
    padding-left:30rpx;
}
.float-count{
    float:right;
    padding-right:30rpx;
}
